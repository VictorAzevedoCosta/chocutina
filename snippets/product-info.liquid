    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'social-sharing' %}
          {% render 'social-sharing', block: block, share_title: product.title, share_permalink: product.url, share_image: product.featured_image %}
        {% when 'delivered-orders' %}
          {% render 'delivered-orders', block: block %}
        {% when 'simulator-shipping' %}
            {% render 'simulator-shipping', block: block %}
        {% when 'free-shipping' %}
          {% render 'free-shipping', block: block %}
        {% when 'extra-texts' %}
          {% render 'extra2', block: block %}
        {% when 'timer-box' %}
          {% if product.metafields.ultimate.data_cronometro_oferta %}
            {% render 'timer-box', block: block, selected_variant: selected_variant %}
          {% endif %}
        {% when 'buy-together' %}
          {% render 'buy-together', block: block %}
      {% endcase %}
    {% endfor %}

    {%- comment -%}The availability container will be added automatically if there is store pickup available{%- endcomment -%}
    {%- if section.settings.show_pickup_availability -%}
      <div class="product-meta__store-availability-container"></div>
    {%- endif -%}

    {%- if request.page_type == 'index' and section.settings.show_description and product.description != blank and section.settings.description_below_add_to_cart -%}
      <div class="product-meta__description rte">
        {{ product.description }}
      </div>
    {%- endif -%}

