      "default": "#00b27a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Cor do texto / Botão",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Cor do ícone / Botão",
      "default": "#ffffff"
    },
    {
      "type": "color",
