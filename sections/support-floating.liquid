          "default": "(11) 99999-9999",
          "info": "Coloque no número neste formato: (11) 99999-9999"
        },
        {
          "type": "textarea",
          "id": "cw_text",
          "label": "Texto",
          "default": "Olá vim da sua loja!",
          "info": "Texto para mensagem do WhatsApp"
        },
        {
          "type": "checkbox",
          "id": "cw_product_link",
          "label": "Enviar link do produto junto",
