{%- if section.settings.show_infobar -%}
  <section data-section-id="{{ section.id }}" data-section-type="info-bar" data-section-settings="{{ section_settings }}" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
      <div class="info-bar">
        <div class="container">
          <ul class="list-unstyled mx-n3 mb-0 row row-cols-{{ section.settings.mobile_lines }} row-cols-md-{{ section.settings.tablet_lines }} row-cols-lg-{{ section.settings.desktop_lines }} {% if section.settings.stack_mobile %}text-with-icons--stacked{% endif %}">
            {% for block in section.blocks %}
              <li class="info-bar-item px-3 py-4 d-flex align-items-center" {{ block.shopify_attributes }}>

                <div class="mr-4">
                  {{ block.settings.icon }}
                </div>

                <div>
                  <h3 class="title">{{ block.settings.title }}</h3>

                  <div class="rte">
                    {{ block.settings.description }}
                  </div>
                </div>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
  </section>

  <style>
    .info-bar {
      background: {{ section.settings.background_color }};
    }

    .info-bar .info-bar-item .title {
      color: {{ section.settings.title_color }};
    }

    .info-bar .info-bar-item .rte {
      color: {{ section.settings.description_color }};
    }

    .info-bar svg path {
      fill: {{ section.settings.icon_color }} !important;
    }
  </style>

{%- endif -%}

